import java.util.Scanner;

public class TriRev15 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int n, i, j;
        System.out.print("n: ");
        n = input.nextInt();
        for (i = n; i >= 1; i--) {
            for (j = i; j <= n; j++)
                System.out.print("  ");
            for (j = i; j >= 1; j--) {
                System.out.print(j + " ");
            }
            System.out.println();
        }
    }
}
