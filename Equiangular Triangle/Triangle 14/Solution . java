
import java.util.Scanner;

public class Triangle14 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int n, i, j;
        System.out.print("n: ");
        n = input.nextInt();

        for (i = n; i <= n + n - 1; i++) {
            int x = i;
            for (j = n; j >= i - n + 1; j--) {
                System.out.print(x + " ");
                x--;
            }
            System.out.println();

        }
    }
}
