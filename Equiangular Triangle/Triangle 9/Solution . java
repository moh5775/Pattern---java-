
import java.util.Scanner;

public class Triangle9 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int n, i, j;
        System.out.print("n: ");
        n = input.nextInt();
        for (i = 1; i <= n * 2 - 1; i++) {

            if (i % 2 != 0) {
                int x = i;
                for (j = 1; j <= (i / 2) + 1; j++) {
                    System.out.print((x) + " ");
                    x = x + 2;
                }
                System.out.println();
            }

        }
    }
}
