
import java.util.Scanner;

public class Pattern6 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int n, i, j, row, col;
        System.out.print("n: ");
        n = input.nextInt();
        row = col = n;

        for (i = 1; i <= row; i++) {
            for (j = 1; j <= col; j++) {
                if (j % 2 == 0)
                    System.out.print(j / 2 + " ");
                else
                    System.out.print(i + " ");
            }
            System.out.println();
        }
    }
}
