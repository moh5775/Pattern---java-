
import java.util.Scanner;

public class Star3 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int n, i, j;
        System.out.print("n: ");
        n = input.nextInt();
        for (i = 1; i <= n; i++) {
            for (j = i; j <= n; j++) {
                System.out.print("*" + " ");
            }
            System.out.println();
        }
    }
}
